<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Add Resources Here -->

    <Color x:Key="BaseColor">#0AF</Color>
    <Color x:Key="FluentDarkBackground">#202020</Color>

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0%,0%" EndPoint="0%,100%">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Offset="0" Color="{StaticResource BaseColor}"></GradientStop>
                    <GradientStop Offset="1" Color="#fff"></GradientStop>
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0%,0%" EndPoint="0%,100%">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Offset="0" Color="{StaticResource BaseColor}"></GradientStop>
                    <GradientStop Offset="1" Color="{StaticResource FluentDarkBackground}"></GradientStop>
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
