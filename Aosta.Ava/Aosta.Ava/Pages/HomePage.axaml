<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:localization="clr-namespace:Aosta.Ava.Localization"
             xmlns:vm="clr-namespace:Aosta.Ava.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Aosta.Ava.Pages.HomePage"
             x:DataType="vm:HomePageViewModel">

    <Grid RowDefinitions="Auto,Auto,Auto">
        <TextBlock Text="{localization:Localize Key=HomePage.TopAnime.Header}"/>
        <ItemsRepeater Grid.Row="1"
                       ItemsSource="{Binding TopAnimes}">

        </ItemsRepeater>
    </Grid>
</UserControl>
