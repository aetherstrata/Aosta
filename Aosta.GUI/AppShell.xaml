<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="Aosta.GUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mainPage="using:Aosta.GUI.Features.MainPage"
    xmlns:settingsPage="clr-namespace:Aosta.GUI.Features.SettingsPage"
    xmlns:profilePage="clr-namespace:Aosta.GUI.Features.ProfileMainPage"
    BackgroundColor="{AppThemeBinding Dark={StaticResource Gray950}, Light={StaticResource BaseColor}}"
    FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate mainPage:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate settingsPage:SettingsPage}"
        Route="SettingsPage" />

    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate profilePage:ProfilePage}"
        Route="ProfilePage" />
    
</Shell>